.container {padding: 24rpx; background: #f7f9fa; min-height: 100vh;}
/* 顶部按钮整行平分 */
.type-bar, .week-switch-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}
.type-btn, .week-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background: #fff;
  font-size: 28rpx;
  color: #666;
}
.type-btn.active, .week-btn.active {
  background: #1890ff;
  color: #fff;
}
.date-bar {display:flex;gap:10rpx;margin-bottom:14rpx;white-space:nowrap;}
.date-btn {background:#e7f1ff;padding:10rpx 18rpx;border-radius:8rpx;font-size:26rpx;display:inline-block;}
.date-btn.active {background:#4b6cff;color:#fff;}
.lessons-title {font-size:28rpx;font-weight:bold;color:#4b6cff;margin-bottom:18rpx;}
.lesson-list {margin-top:12rpx;}
.lesson-card {
  background:#fff;
  border-radius:12rpx;
  box-shadow:0 2rpx 8rpx rgba(76,108,255,0.06);
  padding:18rpx 18rpx 12rpx 18rpx;
  margin-bottom:18rpx;
  position:relative;
}
.lesson-time {font-size:26rpx;color:#3152c0;margin-bottom:10rpx;}
.lesson-info {font-size:24rpx;color:#444;margin-bottom:4rpx;display:flex;align-items:center;}
.lesson-label {color:#8aa2fa;width:80rpx;white-space: nowrap;}
.student-list {display:flex;flex-wrap:wrap;gap:10rpx; white-space: nowrap; /* 防止换行 */}
.student-name {background:#e7f1ff;padding:6rpx 18rpx;border-radius:8rpx;font-size:26rpx;color:#4b6cff;line-height: 50rpx;}
.cancel-btn {
  height: 60rpx;
  margin-left:8rpx;
  background:#fff;
  color:#ff4b4b;
  border:1rpx solid #ff4b4b;
  border-radius:8rpx;
  font-size:16rpx;
  padding: 6rpx 18rpx;
}
.empty-tip {
  color:#999;
  text-align:left;
  margin-left:10rpx;
  font-size:22rpx;
}
.forcebook-dialog {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content {
  background: #fff;
  border-radius: 8px;
  padding: 30rpx 40rpx;
  min-width: 400rpx;
}
.dialog-title { font-weight: bold; margin-bottom: 30rpx; }
.dialog-row { margin: 18rpx 0; }
.dialog-label { margin-right: 20rpx; }
.dialog-btn-row { display: flex; justify-content: space-between; margin-top: 30rpx; }
.dialog-btn { width: 40%; }
.dialog-value { color: #1890ff; }